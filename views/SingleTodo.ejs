<%- include('partials/layout.ejs' , {username : username})%>

<a class="btn btn-dark" href="/todo">back </a>

<div class="container mt-5 ">

    <div class="d-flex justify-content-between">
        <h1><%= todo %></h1>
        <div>
            <button class="btn btn-dark" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">edit</button>
            <a  href="/todo/delete/<%=id %>" class="btn btn-danger">delete</a>
        </div>
    </div>
    
    <p> added on <%= createdAt.toString().slice(0 , 25 ) %></p>
    <div class="d-flex justify-content-between align-items-center">
        <p class="badge <%= status ? 'bg-success' : 'bg-warning' %>" >
            Status :  <%= status ? "Done" : "Pending" %>
        </p>

            <% if(createdAt.toString() != updatedAt.toString()){ %>
                <span class="badge bg-secondary">updated at <%= updatedAt.toString().slice(0 , 24) %></span>
            <% } %>

    </div>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Todo</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <form method="post" action="/todo/update/<%= id %>">
        <div class="modal-body">
                <input type="text" name="task" class="form-control" required="true" value="<%= todo %>">
                <div class="mt-2">
                    <input type="checkbox" class="form-check-input" id="status" name="status">
                    <label class="form-label" for="status">Status</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>

      </div>
    </div>
  </div>



</div>


<%- include('partials/body.ejs')%>