<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body class="bg-body text-center">

    <%- include('partials/nav.ejs') %>


    <form action="/todo" class="container w-50 my-5 d-flex gap-2 justify-content-center align-items-center" method="post">
      <input type="text" class="form-control w-50" id="floatingInput" placeholder="name@example.com" name="task">
      <button class="btn btn-primary">Add Task</button>
    </form>

    <h1>Todos</h1>
    <table class="table container border table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">First</th>
          <th scope="col">Last</th>
          <th scope="col">Handle</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i of todos) { %>
        <tr>
          <td><%= i.id %></td>

          <% if( i.id == id ){ %>
                    <td>
                        <form method="post">
                            <input type="text" value="<%= i.todo%>" name="task">
                            <button class="btn btn-primary">update</button>
                        </form>
                    </td>
            <% } else {%>
                
                <td><%= i.todo %></td>
                <% } %>
          <td> <span class="badge <%= ( i.status == 'done' ? 'bg-success' : 'bg-warning' ) %>">
            <%= i.status %></td>
          </span> 
          <td>
            <a class="btn bg-info-subtle" href="/edit/<%= i.id %>">edit</a>
            <a class="btn bg-danger-subtle" href="/delete/<%= i.id %>">delete</a>
           </td>
        </tr>
        <% } %>

      </tbody>
    </table>






    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>